
<li class="dropdown">
  <%= link_to "Help", '#', :class => "dropdown-toggle", data: { toggle: "dropdown" } %>
  <ul class="dropdown-menu">
    <li><%= link_to 'Contact Support', help_path %></li>
    <% if user_signed_in? %>
      <li><%= link_to "Release Notes", release_notes_path %></li>
    <% end %>

  </ul>
</li>
<% if user_signed_in? %>
  <li class="dropdown">
    <%= link_to "#{current_user.login}".html_safe, '#', :class => "dropdown-toggle", data: { toggle: "dropdown" } %>
    <ul class="dropdown-menu">
      <% if current_user.devise_modules.include?(:registerable) %>
        <li><%= link_to 'Profile', edit_user_registration_path %></li>
      <% end %>
      <li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to 'Login', new_user_session_path %></li>
<% end %>
